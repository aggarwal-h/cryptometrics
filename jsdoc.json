{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["components", "pages"]
  },
  "plugins": ["plugins/markdown", "better-docs/component"],
  "opts": {
    "encoding": "utf8",
    "destination": "docs/",
    "recurse": true,
    "verbose": true,
    "template": "./node_modules/better-docs"
  },
  "templates": {
    "better-docs": {
      "name": "CryptoMetrics",
      "component": {
        "entry": ["import '../styles/docs.css';"]
      }
    }
  }
}
